<h1>Cocktail <%= @cocktail.name %> </h1>

  <h1>Liste des doses</h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> de <%= dose.ingredient.name%></li>
      <% end %>
    </ul>
  <div>
  <%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) , class: "btn btn-primary"%>
  <%= link_to "back to cocktails", cocktails_path , class: "btn btn-primary"%>
  <%= link_to "delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-primary"%>
  </div>



