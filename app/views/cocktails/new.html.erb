<div class="container" >

  <h1>New Cocktail</h1>


  <%= simple_form_for @cocktail do |f| %>

    <% if @cocktail.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @cocktail.errors.full_messages.each do |message| %>
            <li class='bg-danger'><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit "add the cocktail", class: "btn btn-primary" %>
    <%= link_to "back to cocktails", root_path, class: "btn btn-secondary"%>

  <% end %>
</div>
