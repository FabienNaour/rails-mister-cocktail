


<div class="div" >
  <div class="container" class="back" >

    <p>
      <h1>MISTER COCKTAIL</h1>
      <span id="banner-typed-text" class ="titre"></span>

    </p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary"%>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=  cl_image_path cocktail.photo %>');">
                <div class="card-description">
                  <h2><%= cocktail.name %></h2>
                </div>
                <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
              </div>
            </div>
          <% end %>
    </div>
  </div>

</div>

